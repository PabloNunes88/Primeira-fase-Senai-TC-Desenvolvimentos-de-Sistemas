
/*Aclamação repetida
Peça ao usuário para digitar uma palavra e repita essa palavra 10 vezes na tela.*/

programa {
  funcao inicio() {

    inteiro contador= 1
    cadeia palavra

      escreva("Digite uma palavra: ")
      leia(palavra)

      enquanto(contador<=10){
        escreva("\n",palavra)
        contador++
        
        }


    }
    




  }
}
